\newcounter{NoteCount}
\renewcommand\theNoteCount{\textcolor{gray}{Note:}}
\newcommand{\Note}[2][]{\refstepcounter{NoteCount}\addcontentsline{toc}{subsubsection}{\theNoteCount\space\textcolor{gray}{#1}}\textcolor{gray}{#2}}



%Checked Problem
\newcommand{\newProblemC}[2][Checked Problem]
{
	\refstepcounter{subsection}
	\addcontentsline{toc}{subsection}{\problemFormatC{\thesubsection\quad #1}}
	\noindent\problemFormatC{{\large \textbf  \thesubsection}\\#2}
}
\newcommand{\problemFormatC}[1]{\textcolor{ForestGreen}{#1}}
\newcommand{\subProblemC}[1]{\problemFormatC{#1}}
\newcommand{\newProblemSectionC}[1][Checked Problem]
{
	\refstepcounter{subsection}\addcontentsline{toc}{subsection}{\problemFormatC{\thesubsection\quad #1}}\noindent\problemFormatC{{\large \textbf \thesubsection}}
}

%New problem
\newcommand{\newProblem}[2][Finished Problem]
{
	\refstepcounter{subsection}
	\addcontentsline{toc}{subsection}{\problemFormat{\thesubsection\quad #1}}
	\noindent\problemFormat{{\large \textbf  \thesubsection}\\#2}
}
\newcommand{\newProblemSection}[1][Finished Problem]
{
	\refstepcounter{subsection}\noindent\problemFormat{{\large \textbf \thesubsection}}\addcontentsline{toc}{subsection}{\problemFormat{\thesubsection\quad #1}}
}

\newcommand{\problemFormat}[1]{\textcolor{blue}{#1}}
\newcommand{\subProblem}[1]{\problemFormat{#1}}

%Unfinished problem
\newcommand{\newProblemU}[2][Unfinished Problem]
{
	\refstepcounter{subsection}
	\addcontentsline{toc}{subsection}{\problemFormatU{\thesubsection\quad Unfinished: #1}}
	\noindent\problemFormatU{{\large \textbf \thesubsection}\\#2}
}
\newcommand{\newProblemSectionU}[1][Unfinished Problem]
{
	\refstepcounter{subsection}\noindent\problemFormatU{{\large \textbf \thesubsection}}\addcontentsline{toc}{subsection}{\problemFormatU{\thesubsection\quad #1}}
}
\newcommand{\problemFormatU}[1]{\textcolor{Fuchsia}{#1}}
\newcommand{\subProblemU}[1]{\problemFormatU{#1}}


