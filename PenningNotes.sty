% Make ref footnote based on:
% https://tex.stackexchange.com/questions/30720/footnote-without-a-marker

%[Options]{#2 = Box Type, #3 = Title Name, #4 = Color,}
\newtcolorbox[auto counter,number within=chapter]{basicBox}[4][]
{
	colback=#4!5!white,
	colframe=#4!75!black,
	%colupper=#4!50!black,
	fonttitle=\bfseries,
	rounded corners = all,
	title=#2 \thetcbcounter: #3,
	#1
	}

%\definecolor{DefinitionColor}   {RGB}{} % ForestGreen
%\definecolor{NoteColor}         {RGB}{} % gray
\definecolor{ProblemColor}       {RGB}{233,93,93}
%\definecolor{TheoremColor}      {RGB}{} % YellowOrange
%\definecolor{ConceptColor}      {RGB}{0,47,108} % 0, 47, 108
%\definecolor{ExampleColor}      {RGB}{} % Plum
%\definecolor{TODOColor}         {RGB}{}    % WildStrawberry

\definecolor{ConceptColor}{RGB}{107,139,255}

% [#1 = options]{#2 = title}
\newenvironment{boxDefinition}[2][]
{ \begin{basicBox}[#1]{Definition}{#2}{ForestGreen}}
{ \end{basicBox} }

\newenvironment{boxNote}[2][]
{ \begin{basicBox}[#1]{Note}{#2}{gray}}
{ \end{basicBox} }

\newenvironment{boxProblem}[2][]
{ \begin{basicBox}[#1]{Problem}{#2}{ProblemColor}}
{ \end{basicBox} }

\newenvironment{boxTheorem}[2][]
{ \begin{basicBox}[#1]{Theorem}{#2}{YellowOrange}}
{ \end{basicBox} }


\newenvironment{boxConcept}[2][]
{ \begin{basicBox}[#1]{Concept}{#2}{ConceptColor}}
{ \end{basicBox} }

\newenvironment{boxExample}[2][]
{ \begin{basicBox}[#1]{Example}{#2}{Plum}}
{ \end{basicBox} }

\newenvironment{boxTODO}[2][]
{ \begin{basicBox}[#1]{TODO}{#2}{WildStrawberry}}
{ \end{basicBox} }

\newenvironment{boxQuote}[2][]
{ \begin{basicBox}[#1]{Quote}{#2}{WildStrawberry}}
{ \end{basicBox} }
