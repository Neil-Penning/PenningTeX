\newtcolorbox[auto counter,number within=section]{boxDefinition}[2]
[sidebyside=true, lower separated = true]{
	colback=green!5!white,
	colframe=ForestGreen!75!black,
	colupper=ForestGreen!50!black,
	fonttitle=\bfseries,
	rounded corners = all,
	label = definition #2,
	title=Definition~\thetcbcounter: #2,#1}

\newtcolorbox{boxDefinition*}[2]
[sidebyside=true, lower separated = true]{
	colback=green!5!white,
	colframe=ForestGreen!75!black,
	colupper=ForestGreen!50!black,
	fonttitle=\bfseries,
	rounded corners = all,
	label = definition #2,
	title=#2,#1}

\newtcolorbox{boxMethod}[2][sidebyside=false]{
	colback=blue!5!white,
	colframe=NavyBlue!75!black,
	fonttitle=\bfseries,
	label=method #2,
	title=#2,#1}

\newtcolorbox{boxProblem}[2][sidebyside=false, lower separated = true]{
	colback=purple!5!white,
	colframe=violet,
	colupper=violet!50!black,
	fontupper=\bfseries,
	fonttitle=\bfseries,
	title=#2,#1}

\newtcolorbox{boxGuidedProblem}[2][sidebyside=false]{
	colback=Aquamarine!5!white,
	colframe=Aquamarine,
	coltitle = black,
	fonttitle=\bfseries,
	title=#2,#1}

\newtcolorbox{boxDerivation}[2][sidebyside=false]{
	colback=Goldenrod!5!white,
	colframe=Goldenrod!85!gray,
	colupper=green!60!black,
	coltitle=black,
	lower separated = true,
	fonttitle=\bfseries,
	title=#2,#1}

\newtcolorbox[auto counter,number within=section]{boxProof}[2]
[sidebyside=false, lower separated = false]{
	colback=BrickRed!5!white,
	colframe=BrickRed!85!gray,
	fonttitle=\bfseries,
	rounded corners = all,
	title={Proof~\thetcbcounter: #2},#1}

\newtcolorbox{boxProof*}[2][sidebyside=false]{
	colback=BrickRed!5!white,
	colframe=BrickRed!85!gray,
	coltitle=white,
	fonttitle=\bfseries,
	title=#2,#1}

\newtcolorbox{boxNote}[2][sidebyside=false]{
	colback=black!5!white,
	colframe=black!50!white,
	fonttitle=\bfseries,
	title=#2,#1}
